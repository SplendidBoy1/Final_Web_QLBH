<!DOCTYPE html>
<html lang="en">

<head>
    {{> header }}
    <title>{{product.ProName}} - Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/product_details.css" rel="stylesheet">
</head>

<body>
    {{!-- {{> navigation}} --}}
    <div class="container">
        <div class="col-lg-8 border p-3 main-section bg-white">
            <div class="row hedding m-0 pl-3 pt-0 pb-3">
                Product Detail Page
            </div>
            <div class="row m-0">
                <!-- Left-side Image Section -->
                <div class="col-lg-4 left-side-product-box pb-3">
                    <img src="{{product.Image_Src}}" class="border p-3">
                    <span class="sub-img">
                        <!-- Display additional images dynamically if available -->
                        {{#each product.additionalImages}}
                        <img src="{{this}}" class="border p-2">
                        {{/each}}
                    </span>
                </div>
                <!-- Right-side Product Details -->
                <div class="col-lg-8">
                    <div class="right-side-pro-detail border p-3 m-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <span>Category: {{product.categoryName}}</span>
                                <p class="m-0 p-0">{{product.ProName}}</p>
                            </div>
                            {{!-- <p>Rating: {{product.Rating}} | Stock: {{product.Stock}}</p> --}}
                            <div class="col-lg-12">
                                <p class="m-0 p-0 price-pro">{{product.Price}} VND</p>
                                <hr class="p-0 m-0">
                            </div>
                            <div class="col-lg-12 pt-2">
                                <h5>Product Detail</h5>
                                <span>{{{product.FullDes}}}</span>
                                <hr class="m-0 pt-2 mt-2">
                            </div>
                            <div class="col-lg-12 mt-3">
                                <div class="row">
                                    {{!-- Them vao gio hang o day --}}
                                    <div class="col-lg-6 pb-2">
                                        <a href="/cart/add/{{product.ProID}}" class="btn btn-danger w-100">Add To
                                            Cart</a>
                                    </div>
                                    {{!-- Checkout o day --}}
                                    <div class="col-lg-6">
                                        <a href="/checkout/{{product.ProID}}" class="btn btn-success w-100">Buy Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Related Products Section -->
            <div class="row">
                <div class="col-lg-12 text-center pt-3">
                    <h4>More Products</h4>
                </div>
            </div>
            <div class="row mt-3 p-0 text-center pro-box-section">
                {{#each relatedProducts}}
                <div class="col-lg-3 pb-2">
                    <div class="pro-box border p-0 m-0">
                        <a href="/products/{{ProID}}">
                            <img src="{{Image_Src}}" alt="{{Proname}}">
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>