<!DOCTYPE html>
<html lang="en">
<head>
    {{> header }}
    <title>{{product.ProName}} Details</title>
    <link rel="stylesheet" href="/styles/main_page.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="/images/products/{{product.Image_Src}}" class="img-fluid" alt="{{product.ProName}}">
            </div>
            <div class="col-md-6">
                <h1>{{product.ProName}}</h1>
                <p>{{product.FullDes}}</p>
                <h3 class="text-primary">${{product.Price}}</h3>
                <a href="/products" class="btn btn-secondary mt-3">Back to Products</a>
            </div>
        </div>
    </div>
</body>
</html>
